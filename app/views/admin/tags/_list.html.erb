<div class="page-header">
  <h1>Tag</h1>
</div>

<div class="row">
  <form action="<%= admin_search_tags_path %>" method="get">
    <div class="col-lg-3">
    </div>
    <div class="col-lg-6">
      <div class="input-group">
        <input type="text" class="form-control" name="q" placeholder="Search for..." value="<%= params[:q] %>">
        <span class="input-group-btn">
          <button class="btn btn-default" type="submit">Go!</button>
        </span>
      </div><!-- /input-group -->
    </div><!-- /.col-lg-6 -->
    <div class="col-lg-3">
    </div>
  </form>
</div><!-- /.row -->

<hr>

<table class="table table-bordered table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Created At</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%=l tag.created_at %></td>
        <td>
          <%= link_to admin_tag_path(tag), :class => "btn btn-info" do %>
            R
          <% end %>
          <%= link_to edit_admin_tag_path(tag), :class => "btn btn-success" do %>
            U
          <% end %>
          <%= link_to admin_tag_path(tag), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" do %>
            D
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @tags, renderer: BootstrapPagination::Rails %>
<div style="clear:both;"></div>

<%#= link_to "New", new_admin_tag_path, :class => 'btn btn-primary' %>
