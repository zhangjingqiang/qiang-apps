<div class="page-header">
  <h1>Show App</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Name:</strong></dt>
  <dd><%= @app.name %></dd>
  <dt><strong>Permalink:</strong></dt>
  <dd><%= @app.permalink %></dd>
  <dt><strong>Description:</strong></dt>
  <dd><%= simple_format(@app.description) %></dd>
  <dt><strong>URL:</strong></dt>
  <dd><%= @app.url %></dd>
  <dt><strong>Position:</strong></dt>
  <dd><%= @app.position %></dd>
  <dt><strong>Tags:</strong></dt>
  <dd>
    <% @app.tags.each do |tag| %>
      <%= link_to "/admin/tags/#{tag.name}/apps" do %>
        <span class="label label-<%= random_color %>"><%= tag.name %></span>
      <% end %>
    <% end %>
  </dd>
</dl>

<%= link_to "Back", admin_apps_path, :class => 'btn btn-default'  %>
<%= link_to "Edit", edit_admin_app_path(@app), :class => 'btn btn-default' %>
<%= link_to "Delete", admin_app_path(@app),
              :method => 'delete',
              :data => { :confirm => 'Are you sure?' },
              :class => 'btn btn-danger' %>
