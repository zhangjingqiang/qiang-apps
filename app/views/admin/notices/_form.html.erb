<% if @notice.errors.any? %>
<div id="error_expl" class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title"><%= pluralize(@notice.errors.count, "error") %> prohibited this notice from being saved:</h3>
  </div>
  <div class="panel-body">
    <ul>
      <% @notice.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>

<%= f.text_field :title %>
<%= f.text_area :body %>

<%= f.primary "Submit" %>
