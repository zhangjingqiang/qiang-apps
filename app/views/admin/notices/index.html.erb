<%- model_class = Notice -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<div class="row">
  <div class="col-lg-12" align="right">
    <div class="input-group">
      <%= link_to 'New', new_admin_notice_path, :class => 'btn btn-primary' %>
    </div>
  </div>
</div>

<hr>

<table class="table table-bordered table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:body) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @notices.each do |notice| %>
      <tr>
        <td><%= link_to notice.id, admin_notice_path(notice) %></td>
        <td><%= notice.title %></td>
        <td><%= truncate(notice.body, length: 30) %></td>
        <td><%=l notice.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
            edit_admin_notice_path(notice), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            admin_notice_path(notice),
            :method => :delete,
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
            :class => 'btn btn-xs btn-danger' %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>
