<div class="page-header">
  <h1>About</h1>
</div>
<table class="table table-bordered table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Created At</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @abouts.each do |about| %>
      <tr>
        <td><%= about.title %></td>
        <td><%= truncate(about.description, length: 30) %></td>
        <td><%=l about.created_at %></td>
        <td>
          <%= link_to admin_about_path(about), :class => "btn btn-info" do %>
            R
          <% end %>
          <%= link_to edit_admin_about_path(about), :class => "btn btn-success" do %>
            U
          <% end %>
          <%= link_to admin_about_path(about), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" do %>
            D
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @abouts, renderer: BootstrapPagination::Rails %>
<div style="clear:both;"></div>

<%= link_to "New",
            new_admin_about_path,
            :class => 'btn btn-primary' %>
