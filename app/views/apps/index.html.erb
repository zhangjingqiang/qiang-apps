<div class="row row-offcanvas row-offcanvas-right">
  <div class="col-xs-12 col-sm-9">
    <div class="row">
      <% @apps.each do |app| %>
      <div class="col-xs-12 col-sm-12">
        <div class="panel panel-<%= random_color %>">
          <div class="panel-heading">
            <h3 class="panel-title"><%= link_to app.try(:name), app.try(:url) %></h3>
          </div>
          <div class="panel-body">
            <%= simple_format(app.try(:description)) %>
            <% app.tags.each do |tag| %>
              <%= link_to "/tags/#{tag.name}/apps" do %>
                <span class="label label-<%= random_color %>"><%= tag.name %></span>
              <% end %>
            <% end %>
          </div>
        </div>
      </div><!--/span-->
      <% end %>
    </div><!--/row-->
  </div><!--/.col-xs-12.col-sm-9-->

  <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar" role="navigation">
    <div class="list-group">
      <% @tags.each do |tag| %>
        <% if params[:tag_id] == tag_name(tag.id) %>
          <%= link_to tag.name.to_s + " (" + tag.apps.count.to_s + ")", "/tags/#{tag.name}/apps", class: "list-group-item active" %>
        <% else %>
          <%= link_to tag.name.to_s + " (" + tag.apps.count.to_s + ")", "/tags/#{tag.name}/apps", class: "list-group-item" %>
        <% end %>
      <% end %>
    </div>
  </div><!--/.sidebar-offcanvas-->
</div><!--/row-->

<%= will_paginate @apps, renderer: BootstrapPagination::Rails %>